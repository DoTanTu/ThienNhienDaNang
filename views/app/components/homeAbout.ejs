<div class="home-about py-90 bg-grey" id="about-us">
    <div class="container">
        <% if (dataCategories) {
            const category = dataCategories.find(category => category._id === 'WSIqFEUod');
            if (category) {
                    name = category.name,
                    desc = category.desc
             %>
        <h3 class="h3-title mb-3 text-center" ><%= name.toUpperCase()%></h3>
        <p class="p-title mb-5"><%= desc%></p>
            <%}
        }%>
        <div class="row-change">
            <%if(dataProducts ){
                dataProducts.forEach((prod) => {
                    if(prod.categoryIds[0] === 'WSIqFEUod'){
                        nameProd = prod.name;
                        idProduct = prod._id;
                        description = prod.descriptionPlus[0].description
                        let alt = '';
                        let pathImage = '';
                        let obImage = prod.images.find( item => item.showTopImage == true);
                        if(obImage){
                            pathImage = obImage.image;
                            alt = obImage.alt;
                        }else{
                            pathImage = prod.images[0].image
                        }
                        imageResize = pathImage.replace('images/', 'thumbnail/480/').replace(/\.(png|jpg|jpeg|JPG)$/i, '.webp');
              %>
            <div class="cot-12 cot-4-md px-30 py-30 home-about-box">
                <img class="mb-3" src="../<%= imageResize%>" onerror="javascript:this.src='../<%= pathImage%>'" alt="<%= alt%>">
                <h4 class="text-center title_about_intro" data-bs-toggle="modal" data-bs-target="#modal<%= idProduct%>"><%- nameProd%></h4>
            </div>

            <div class="modal fade" id="modal<%= idProduct%>" tabindex="-1" aria-labelledby="cateDetailLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-scrollable modal-lg">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h4 class="modal-title fs-5" id="cateDetailLabel"><%= nameProd.replace(/<\/?br\s*\/?>/gi, ' ')%></h4>
                      <button type="button" class="btn" data-bs-dismiss="modal" aria-label="Close">
                        <i class="bi bi-x-lg"></i>
                      </button>
                    </div>
                    <div class="modal-body">
                        <div class="d-flex justify-content-center mb-4" style="max-height: 100px; width: auto;">
                            <img class="h-100 w-auto" src="../<%= imageResize%>" onerror="javascript:this.src='../<%= pathImage%>'" alt="<%= alt%>">
                        </div>
                        <%- description%>
                    </div>
                  </div>
                </div>
              </div>

             <%  }
              });
            }%>
        </div>
    </div>
</div>