<html lang="en">

<head>
    <%- include('./components/head') -%>
</head>

<body>
    <%- include('./components/header') -%>
    <%- include('./components/bottomNav') -%>
   
    <section class="userCover">
        <div class="container" id="user-avatar-customer">
            
        </div>
    </section>
    <div class="main-body user">
        <div class="container">
            <div class="row-change">
                <div class="cot-12 cot-3-lg pe-0 pe-lg-4">
                    <div class="side-box">
                        <h4 class="mb-4">Danh mục</h4>
                        <div class="side-cate mb-4">
                            <ul class="side-cate-list">
                                <li class="side-cate-list-title"><i class="bi bi-person-fill"></i><a href="ca-nhan">Thông tin cơ bản</a></li>
                                <li class="side-cate-list-title"><i class="bi bi-shield-fill-check"></i><a href="reset-password">Bảo mật</a></li>
                                <li class="side-cate-list-title"><i class="bi bi-bell-fill"></i><a href="#">Thông báo</a></li>
                                <li class="side-cate-list-title"><i class="bi bi-chat-right-text-fill"></i><a href="#">Tin nhắn</a></li>
                                <li class="side-cate-list-title"><i class="bi bi-archive-fill"></i><a href="#">Đóng góp</a></li>
                                <li class="side-cate-list-title"><i class="bi bi-heart-fill"></i><a href="#">Yêu thích</a></li>
                                <li class="side-cate-list-title"><i class="bi bi-cloud-download-fill"></i><a href="#">Tải về</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="cot-12 cot-9-lg userInforBox">
                    <h3 class="h3-title underline">Thông tin cơ bản:</h3>
                    <button class="userEditBtn main-btn" onclick="userEdit(this)">
                        <i class="bi bi-pencil-square"></i>
                        Chỉnh sửa
                    </button>
                    <div class="userInfor">
                        <form class="row-change py-30 userForm" id="AuthurUpdateProfile">
                            <input type="text" id="pageName" value="customer" hidden="">
                            <div class="mb-3 cot-6-md">
                                <label for="userAvaUpload" class="form-label">Thay đổi hình đại diện:</label>
                                <div class="position-relative" id="customer-avatar">
                                    <input type="file" class="form-control" id="userAvaUpload" accept="image/*" onchange="handleFileUpload()" disabled>
                                    <input type="text" id="avatar-read" name="avatar" value="" hidden>
                                </div>
                                
                            </div>
                            <div class="mb-3 cot-6-md">
                                <label for="userCoverUpload" class="form-label">Thay đổi ảnh bìa:</label>
                                <input type="file" name="backgroundImage" class="form-control" id="userCoverUpload" accept="image/*" onchange="handleBackgroundUpload()" disabled>
                                <input type="text" name="backgroundImage" id="backgroundImage-read" value="" hidden>
                            </div>
                            
                            <div class="donggop-thongtin row-change" id="user-introduction">
                                
                            </div>
                            <div class="btn-group justify-content-center">
                                <button type="submit" class="main-btn mx-0">
                                    <i class="bi bi-check-lg"></i>
                                    Lưu
                                </button>
                                <a class="main-btn huy mx-0" onclick="huyUserEdit(this)">
                                    <i class="bi bi-x"></i>
                                    Huỷ
                                </a>
                            </div>
                    </form>
                    </div>

                </div>
               
            </div>
        </div>
    </div>

    <%- include('./components/footer') -%>
    <%- include('./components/end') -%>
    <script type="module" src="../public/app/js/profile.js"></script>
</body>

</html>