<div class="offcanvas offcanvas-end" id="CreateOrEditCategory" aria-hidden="true">
  <div class="offcanvas-header mb-3">
    <h5 class="offcanvas-title">Tạo Danh Mục</h5>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body flex-grow-1">
    <form class="browser-default-validation j-pro" id="formCategoryData" action="/admin.addCategory" method="POST">
      <div id="view-language" class="mb-3 mt-3">
        <% if(typeof languages !="undefined" && languages.length> 0){ %>
        <label for="addLanguage" class="mb-0">Ngôn ngữ</label>
        <select class="form-control language-data mt-3" id="addLanguage" onchange="onChangeLanguage(this)" name="language">
          <option value="">
            Mặc định
          </option>
            <% languages.forEach(function(item){ %>
              <option value="<%= item._id %>">
                <%= item.name %>
              </option>
              <% }); %>
        </select>
        <% } %>
      </div>
      <div class="mb-3">
        <input name="pageCurrent" hidden value="<% if(typeof pageCurrent != undefined && pageCurrent != null){ %><%= pageCurrent%><%}%>"></input>
        <input name="parents" hidden ></input>
        <label for="name" class="form-label">Tên Danh Mục</label>
        <input type="text" class="form-control" id="cateId" name="cateId" hidden placeholder="">
        <input type="text" class="form-control" id="level" name="level" hidden placeholder="">
        <input type="text" class="form-control" id="languages" name="languages" hidden placeholder="">
        <input type="text" class="form-control" id="name" name="name" value="" placeholder="" required>
      </div>
      <div class="mb-3 mt-3">
        <div class="d-flex justify-content-between mb-2">
          <label for="cbShowTop" class="mb-0">Top Danh Mục</label>
          <div class="form-check form-switch mb-2">
            <input class="form-check-input" type="checkbox" id="cbShowTop" name="showTop" />
          </div>
        </div>
      </div>
      <div class="mb-3">
        <%- include('../component/treeCategory') -%>
      </div>
      
      <div class="card accordion-item mb-4 mt-3">
        <h2 class="accordion-header" id="detailCatHeadingTwo">
          <button type="button" class="accordion-button" data-bs-toggle="collapse" data-bs-target="#category-detail-view" aria-expanded="true" aria-controls="category-detail-view">
            Chi tiết
          </button>
        </h2>
        <div id="category-detail-view" class="accordion-collapse collapse show" aria-labelledby="detailCatHeadingTwo" data-bs-parent="#category-detail-view" style="">
          <div class="accordion-body">
            <div class="mb-3 mt-3">
              <label  class="form-label">Mô Tả</label>
              <textarea class="form-control" name="desc" id="desc" cols="2" rows="5">
                </textarea>
            </div>
            <div class="mb-3">
              <label  class="form-label">Hình Ảnh</label>
              <!-- Add name when using upload-->
              <input type="text" id="pageName" value="category-<%= pageCurrent%>"  hidden>
              <input type="text" class="form-control" hidden name="alts">
              <input type="text" class="form-control" hidden name="images">
              <div id="myDropzone" class="dropzone"></div>
            </div>
          </div>
        </div>
    </div>
   
      <%- include('../component/seoView', {seoData : null}) -%>
      
      <div class="mb-3 d-flex flex-wrap">
        <button type="submit" class="btn btn-primary me-3">Gửi</button>
        <button type="button" class="btn btn-label-secondary" data-bs-dismiss="offcanvas">Cancel</button>
      </div>
    </form>
  </div>
</div>