    <script type="text/javascript" src="../public/admin/assets/libs/j-pro/js/jquery.j-pro.js"></script>
    <script type="text/javascript" src="../public/admin/assets/js/jquery.form.min.js"></script>

    <script src="../public/admin/assets/libs/cleave/cleave.js"></script>
    <script src="../public/admin/assets/libs/cleave/cleave-phone.js"></script>
    <script src="../public/admin/assets/js/pages/systemSite/list.js"></script>
    <script src="../public/admin/assets/libs/bs-stepper/bs-stepper.js"></script>

    <script src="../public/admin/assets/libs/dropzone/dropzone.min.js"></script>
    <script src="../public/admin/assets/js/pages/files/uploadApp.js"></script>
    <script src="../public/admin/assets/js/pages/files/uploadHtml.js"></script>

    <script src="../public/admin/assets/js/pages/systemSite/modal-create-app.js"></script>
