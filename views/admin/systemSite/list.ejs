<!DOCTYPE html>
<html lang="en" class="light-style layout-menu-fixed" dir="ltr" data-theme="theme-default"
  data-assets-path="../public/admin/assets/" data-template="vertical-menu-template-free">

<head>
  <%- include('../partials/head') -%>
  <%- include('../partials/common-list-css') -%>
  <%- include('../partials/common-crud-css') -%>
  <link rel="stylesheet" href="../public/admin/assets/libs/bs-stepper/bs-stepper.css">
</head>

<body>
  <!-- Layout wrapper -->
  <div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
      <%- include('../partials/navbar-left') -%>
        <!-- Layout container -->
        <div class="layout-page">
          <%- include('../partials/navbar-top') -%>
            <!-- Content wrapper -->
            <% if(typeof appCurrent != undefined && appCurrent != null){ %>
              <%- include('./app/edit-app') -%>
            <% }else { %>
              <%- include('./app/create-app') -%>
            <% } %>
            <div class="content-wrapper">
              <div class="container-xxl flex-grow-1 container-p-y">
                
                <%- include('./app/view-app') -%>
                
                <div class="row">
                  <div class="col-xl-12 col-lg-12 col-md-12 order-1 order-md-0">
                    <!-- ============================= -->
                    <!-- Content Site -->
                    <!-- ============================= -->


                    <div class="card">
                      <div class="row card-header">
                        <h5 class="col-lg-10">Sites</h5>
                        <% if(typeof appCurrent != undefined && appCurrent != null){ %>
                        <a href="/admin/site-add?appId=<%= appCurrent._id %>" class="dt-button btn btn-primary col-lg-2" tabindex="0"
                          aria-controls="DataTables_Table_0" type="button"><span><i class="bx bx-plus me-md-2"></i><span
                              class="d-md-inline-block d-none">Create Site</span></span></a>
                        <%}%>
                      </div>

                      <div class="table-responsive pt-0 p-3">
                        <div class="dataTables_wrapper dt-bootstrap5 no-footer">
                          <table class="table datatable-project border-top dataTable no-footer dtr-column" id="siteTable">
                            <thead>
                              <tr>
                                <th>Site</th>
                                <th>CreateAt</th>
                                <th>Actions</th>
                              </tr>
                            </thead>
                          </table>
                        </div>



