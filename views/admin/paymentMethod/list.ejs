<!DOCTYPE html>
<html lang="en" class="light-style layout-menu-fixed" dir="ltr" data-theme="theme-default"
  data-assets-path="../public/admin/assets/" data-template="vertical-menu-template-free">

<head>
  <%- include('../partials/head') -%>
    <%- include('../partials/common-list-css') -%>
      <%- include('../partials/common-crud-css') -%>
</head>

<body>
  <!-- Layout wrapper -->
  <div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
      <%- include('../partials/navbar-left') -%>
        <!-- Layout container -->
        <div class="layout-page">
          <%- include('../partials/navbar-top') -%>
            <!-- Content wrapper -->
            <div class="content-wrapper">
              <div class="container-xxl flex-grow-1 container-p-y">
                <div class="row">
                  <div class="col-xl-12 col-lg-12 col-md-12 order-1 order-md-0">
                    <!-- ============================= -->
                    <!-- Content Page -->
                    <!-- ============================= -->
                    <div class="card">
                      <div class="row card-header">
                        <h5 class="col-lg-9">Các phương thức hỗ trợ khách hàng thanh toán</h5>
                        <button class="btn btn-primary d-grid col-lg-3" onclick="showCreateView()">
                          <span class="d-flex align-items-center justify-content-center text-nowrap"><i
                              class="bx bx-plus me-md-2"></i>Phương thức thanh toán</span>
                        </button>
                      </div>

                      <div class="table-responsive p-3">
                        <div class="dataTables_wrapper dt-bootstrap5 no-footer">
                          <div class="row">
                            <% if(typeof data !="undefined" && data.length> 0){
                              data.forEach(function(item, index){ %>
                                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4 col-6 mb-4">
                                  <div class="card">
                                    <div class="card-body">
                                      <div class="card-title d-flex align-items-start justify-content-between">
                                        <% if(item.image){ %>
                                          <div class="avatar flex-shrink-0">
                                            <img src="/<%item.image %>" alt="Image" class="rounded">
                                          </div>
                                        <%}else{%>
                                          <div class="avatar-wrapper"><div class="avatar avatar-sm me-3"><span class="avatar-initial rounded-circle bg-label-dark">
                                            <%=  item.paymentMethod.charAt(0) %>
                                          </span></div></div>
                                        <%}%>
                                    
                                        <div class="dropdown">
                                          <button class="btn p-0" type="button" id="cardOpt1" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                          </button>
                                          <div class="dropdown-menu" aria-labelledby="cardOpt1">
                                            <a class="dropdown-item" onclick="showEditView('<%= encodeURI(JSON.stringify(item))%>')">Edit</a>
                                            <a class="dropdown-item" onclick="confirmDelete('<%= item._id%>')">Delete</a>
                                          </div>
                                        </div>
                                      </div>
                                      <%
                                      switch(item.paymentMethod) {
                                        case "COD":
                                          %>
                                          <span class="fw-semibold d-block mb-1">Phương thức :Thanh toán sau</span>
                                          <% break;
                                        case "BANK":
                                          %>
                                          <span class="fw-semibold d-block mb-1">Phương thức : Chuyển khoản ngân hàng</span>
                                          <span class="d-block mb-1"><%= item.accountName %></span>
                                          <span class="d-block mb-1"><%= item.accountNumber %></span>
                                          <span class="d-block mb-1"><%= item.bankName %></span>
                                          <span class="d-block mb-1"><%= item.pKey %></span>
                                          <% break;
                                        default:
                                         break;
                                      }
                                      %>
                                  
                                    </div>
                                  </div>
                                </div>
                            <%  })} %>
                          </div>
                        </div>
                      </div>
                    </div>
                    <% let stripeData = data.find(x=>x.paymentMethod == "STRIPE")%>
                    <%if(typeof app != 'undefined' && app !=null && app.module != null && app.module.isPaymentOnline==true) { %>
                      <%- include('./methodOnline', {stripeData : stripeData}) -%>
                    <%}%>
                    <!-- ============================= -->
                    <!-- Content Page -->
                    <!-- ============================= -->
                  </div>
                </div>

                <%- include('./add') -%>
              </div>
              <!-- Footer -->
              <%- include('../partials/footer') -%>
                <!-- / Footer -->
                <div class="content-backdrop fade"></div>
            </div>
            <!-- Content wrapper -->
        </div>
        <!-- / Layout page -->
    </div>
    <!-- Overlay -->
    <div class="layout-overlay layout-menu-toggle"></div>
  </div>
  <!-- / Layout wrapper -->
  <%- include('../partials/common-js') -%>
    <%- include('../partials/common-crud-js') -%>
      <%- include('../partials/common-list-js') -%>
        <script src="../public/admin/assets/js/pages/payment/list.js"></script>
        <script src="../public/admin/assets/js/pages/payment/paymentOnline.js"></script>
</body>

</html>