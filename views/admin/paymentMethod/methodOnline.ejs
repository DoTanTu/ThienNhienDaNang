<% 
  var _id = ""
  var paymentMethod = ""
  var sKey = ""
  var pKey = ""
  if (stripeData != undefined && stripeData != null) {
    _id = stripeData._id 
    paymentMethod = stripeData.paymentMethod
    sKey = stripeData.sKey
    pKey = stripeData.pKey
  } %>

<div class="card mt-3">
    <div class="card-header">
      <div class="card-title m-0">
        <h5 class="m-0 mb-1">Các phương thức Online</h5>
      </div>
    </div>
    <div class="card-body">
      <div class="row mb-3 g-3 bg-label-secondary px-4 pt-2 rounded-2 mx-0 mt-0">
        <div class="col-12 d-flex justify-content-between align-items-start border-bottom p-0 pb-2">

          <img src="../public/admin/assets/img/icons/brands/stripe.svg" alt="Stripe" height="50">

          <span><a href="javascript:void(0);" onclick="onActivateStripe()">Activate</a></span>
        </div>
        <div class="col-12 p-0" id="view-stripe">
            <form class="browser-default-validation j-pro" id="formPaymentMethodOnline" action="/admin.addOrEditPaymentMethod" method="POST">
                <input type="text" class="form-control" id="sId" name="_id" hidden value="<%= _id%>">
                <input type="text" class="form-control" id="sPaymentMethod" name="paymentMethod" hidden  value="STRIPE">
    
              <div class="mb-3">
                <label for="sk" class="form-label">Secret key</label>
                <input type="password" class="form-control" disabled id="sSK" name="sKey" value="<%= sKey%>" placeholder="">
              </div>
        
            <div class="mb-3">
            <label for="pk" class="form-label">Publishable key</label>
            <input type="text" class="form-control" id="sPK" disabled name="pKey" value="<%= pKey%>" placeholder="">
            </div>
            <button type="submit" id="summit" disabled class="btn btn-primary me-3 mb-3">Save</button>
            </form>
        </div>
      </div>
    </div>
  </div>